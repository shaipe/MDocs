{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "/#/*": ["types/*"]
        },
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "types": ["@htui/types"]
    },
    "include": ["src/**/*", "src/**/*.vue", "bridge.ts"],
    "exclude": ["node_modules"]
}
